<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.GiohangActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbargiohang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        app:title="THANH TOÁN">

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/font_size_medium"
            android:layout_gravity="center"
            android:text="Địa chỉ nhận hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ten"
            android:textSize="@dimen/font_size_medium"
            android:layout_gravity="center"
            android:text="Tên"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sdt"
            android:textSize="@dimen/font_size_medium"
            android:layout_gravity="center"
            android:text="SĐT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_diachi"
            android:textSize="@dimen/font_size_medium"
            android:layout_gravity="center"
            android:text="Địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/listviewgiohang"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/font_size_medium"
            android:layout_gravity="center"
            android:text="Phương thức thanh toán"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/font_size_medium"
            android:gravity="right"
            android:text="Thanh toán khi nhận hàng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">
            <TextView
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/font_size_medium"
                android:layout_gravity="center"
                android:text="Tổng thanh toán"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_tongtienthanhtoan"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_size_medium"
                android:layout_gravity="center"
                android:text="Tiền"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentRight="true"
            android:background="@drawable/button"
            android:text="Thanh toán"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/black"
            android:id="@+id/buttonthanhtoangiohang"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </RelativeLayout>




</LinearLayout>